.pane-centered {
  margin: auto;
  width: 50vh;
}

.pane-centered-title {
  font-family: var(--font-mont);
  margin-top: 0;
  text-align: center;
}

.pane-centered-main {
  background: var(--color-grey);
  border-radius: var(--radius);
  transition: background .2s linear;
  padding: 1em;

  &.naked {
    background: var(--color-white);
  }
}

// used in login forms
.form-error {
  color: #FB2F29;
}

.server-list {
  display: flex;
  margin-bottom: 10px;

  select {
    background: var(--color-black);
    border-radius: var(--radius);
    color: var(--color-white);
    padding: 1em;
    width: 100%;
  }
}
