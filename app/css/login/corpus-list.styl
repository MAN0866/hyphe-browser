.corpus-list-filter {
  position: relative;
  text-align: center;

  input {
    background: var(--color-white);
    border-radius: var(--radius);
    border: none;
    margin-bottom: 12px;
    padding: 1em 3em 1em 1em;
    width: 100%;

  }
  span {
    font-size: 14px;
    position: absolute;
    right: .8em;
    top: 16px;
  }
}


.corpus-list-slider {
  height: 200px;
  overflow-y: auto;
}

.corpus-list-item {
  background: var(--color-white);
  border-radius: var(--radius);
  border: none;
  cursor: pointer;
  font-family: var(--font-pt);
  margin: 6px 0;

  &:hover {
    background: var(--color-grey-light);
  }

  div {
    cursor: pointer;
  }

  span {
    cursor: pointer;
  }

  a {
    display: block;
    text-decoration: none;
  }
}

.corpus-list-item-name {
  cursor: pointer;
  font-weight: bold;

  .icon {
    margin: 0 0.5em;
  }
}

.corpus-list-item-webentities {
  font-weight: bold;
}

.corpus-list-item-dates {
  font-size: 0.8em;
}
