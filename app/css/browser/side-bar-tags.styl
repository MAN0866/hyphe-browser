// see https://github.com/JedWatson/react-select/blob/master/scss/control.scss

.browser-side-bar-tags {

  .browser-side-bar-tags-category {
    display: flex;
    margin-bottom: 10px;

    .category-name {
      font-family: var(--font-pt);
      font-size: 12px;
      font-weight: bold;
      text-align: left;
      width: 150px;
      margin-bottom: 8px;
      margin-top: 8px;
      padding-left: 11px;
    }

    .category-tag {
      flex-grow: 1;
    }
  }

  .browser-side-bar-tags-new-category {
    margin-top: 1em;

    // fake button when not focused
    input {
      background: var(--color-grey);
      border-color: var(--color-grey);
      cursor: text;
      padding-right: 30px;

      &::-webkit-input-placeholder {
        color: var(--color-black)
      }

      &:focus {
        background: var(--color-white);

        &::-webkit-input-placeholder {
          color: var(--color-white);
        }
      }
    }

    button {
      position: absolute;
      right: 20px;
      span {
        font-weight: bold;
      }
    }
  }

  .Select {

    .Select-control {
      background: var(--color-white);
      border: 1px solid var(--color-white);
      border-radius: var(--radius);
      box-shadow: none;
      text-align: left;
    }

    &.is-focused {
      .Select-control {
        border: 1px solid var(--color-black);
      }
    }

    .Select-value {
      color: var(--color-black);
      font-family: var(--font-pt);
      font-size: 12px;
      text-align: left;
      cursor: text;
    }

    // tag with the small cross before
    &.Select--multi {
      .Select-value {
        background: var(--color-grey-light);
        border: 0;
        margin: 7px 0px 0px 7px;
        font-weight: bold;

        .Select-value-icon {
          border: 0;

          &:hover {
            background: var(--color-grey);
            color: var(--color-black);
          }
        }
      }
    }

    .Select-arrow-zone {
      display: none;
    }

    .Select-menu-outer {
      background: var(--color-white);
      border-radius: var(--radius);
      border: 1px solid var(--color-grey-light);
      box-shadow: none;
      margin-top: 1px;
      z-index: 2;
      font-family: var(--font-pt);
    }

    .Select-menu {
      border-radius: var(--radius);
    }

    .Select-option {
      background: var(--color-white);
      padding-left: 12px;
      text-align: left;
      cursor: pointer;

      &.is-selected, &.is-focused, &:hover {
        background: var(--color-white);
        color: var(--color-blue);
      }
    }

    input:focus {
      border: none !important;
    }
  }
}

