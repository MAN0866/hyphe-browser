.browser-stack {
  display: flex;
  padding: 22px 1em 1em 1em;

  // left side

  .browser-stack-wes-empty-list {
    background: var(--color-grey);
    border-radius: var(--radius);
    color: var(--color-black);
    font-family: var(--font-pt);
    font-size: 12px;
    height: 38px;
    padding: 12px;
    width: 310px;
  }

  progress,
  progress::-webkit-progress-bar {
    background: var(--color-grey);
    display: block;
    height: 4px;
    margin-top: .5em;
    width: 100%;
  }

  progress::-webkit-progress-value {
    background: var(--color-black);
  }

  // right colored buttons

  .fillers {
    display: flex;
    margin-left: 3em;
  }

  .filler {
    background: none;
    border: none;
    border-radius: var(--radius);
    padding: 0 1em;
    position: relative;
    text-align: left;

    &:hover {
      background: var(--color-grey-light);
    }

    &::after {
      background: var(--color-black);
      content: ''
      height: 24px;
      position: absolute;
      right: 0;
      top: 0;
      width: 1px;
    }

    &:last-child::after {
      display: none;
    }
  }

  .filler-name {
    cursor: pointer;
    font-family: var(--font-mont);
    font-size: 12px;
    font-weight: bold;
    padding: 3px;
    text-transform: uppercase;
  }

  .filler-counter {
    cursor: pointer;
    font-family: var(--font-pt);
    font-size: 11px;
    opacity: 0.75;
    padding-left: 6px;
  }

  .filler.selected .filler-name {
    background: var(--color-black);
    border-radius: var(--radius);
    color: var(--color-white);
  }

  .filler.selected .filler-counter {
    opacity: 1;
  }


  // see colors.styl

  .filler-UNDECIDED .filler-counter,
  .filler-IN_UNTAGGED .filler-counter,
  .filler-IN_UNCRAWLED .filler-counter {
    color: var(--color-corpus-undecided);
  }

  .filler-IN .filler-counter {
    color: var(--color-corpus-in);
  }

  .filler-OUT .filler-counter {
    color: var(--color-corpus-out);
  }

  .filler-DISCOVERED .filler-counter {
    color: var(--color-corpus-discovered);
  }

}

.browser-stack-wes {
  display: flex;
  min-width: 300px;

  // prev, next, refill
  .btn {
    font-size: 16px;
    padding: 6px;
  }
}
  .browser-stack-wes-index {
    padding-right: .5em;
  }

  .browser-stack-wes-selector {
    flex-grow: 1;
    text-align: center;
  }

  .browser-stack-wes-selector .form-control {
    max-width: 500px;
    width: auto;
  }

