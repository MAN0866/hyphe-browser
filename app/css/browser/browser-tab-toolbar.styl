.browser-tab-url {
  min-height: 30px;

  /* :first-child = scheme */
  em:first-child {
    font-style: normal;
  }

  em:not(:first-child) {
    background: #ffff99;
    padding: 2px 5px;
    font-weight: bold;
    font-style: normal;
  }

  &.loading {
    background-image: url(../../images/loading-url.gif);
    background-position: center;
    background-repeat: repeat-x;
  }
}

.browser-tab-prefix-selector {
  .prefix {
    max-width: 20em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

 .prefix-selected {
    background: #ffff99;
    font-weight: bold;
  }

  .prefix-over {
    background: #99ccff;
  }
}

.browser-tab-url-placeholder {
  color: #999;
  letter-spacing: .2em;
}

/** Tab toolbar **/

.browser-tab-content .toolbar-actions {
  display: flex;
  flex-direction: row;
}
.browser-tab-toolbar-navigation,
.tab-toolbar-webentity {
  flex-shrink: 1;
  flex-grow: 0; /* Do not grow bigger, empty space will be occupied by URL field */
}
.tab-toolbar-webentity {
  min-width: 250px;

  input {
    min-width: 250px;
    max-width: 350px;
    width: initial;
    padding: 5px;

    &.loading {
      background-image: url(../../images/loading.svg);
      background-size: 25px;
      background-repeat: no-repeat;
      background-position: center;
    }
  }
}

.tab-toolbar-url {
  flex: 1;
  overflow: hidden;

  input {
    width: 100%;
  }
}

/* (try to) compensate .btn paddings */

.browser-tab-toolbar {
  input, .browser-tab-url, .browser-tab-prefix-selector, .tab-toolbar-url {
    height: 36px;
  }
  .browser-tab-prefix-selector {
    padding: 5px;
    .btn-group {
      .btn {
        padding: 5px;
      }
      .btn+.btn {
        border: none; // disable stupid photon rule
      }
    }
  }
  .tab-toolbar-url .btn {
    padding: 8px;
  }
}


/* adjust buttons when adjusting */

.browser-tab-toolbar .tab-toolbar-webentity.adjusting {
  button:nth-child(3), button:nth-child(4) {
    background:#252b30;
    height:36px;
    color: white;
  }
  button:nth-child(3) {
    margin-left: 5px;
    border-radius: 5px 0 0 5px;
  }
  button:nth-child(4) {
    margin-right: 5px;
    border-radius: 0 5px 5px 0;
  }
}
