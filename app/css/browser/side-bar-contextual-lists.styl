// plural
.browser-side-bar-contextual-lists {

  // nav
  button {
    font-family: var(--font-mont);
    width: 33%;

    &.selected {
      color: var(--color-blue);
    }

    &:active {
      background: none;
    }
  }
}

// singular
.browser-side-bar-contextual-list {
  background: var(--color-grey);
  border-radius: var(--radius);
  padding: 10px;

  ul {
    max-height: 250px;
    list-style: none;
    margin: 0;
    overflow-x: hidden;
    overflow-y: auto;
    padding: 0;

    &::-webkit-scrollbar {
      width: 2px;
    }
    &::-webkit-scrollbar-thumb {
      background: var(--color-blue);
    }
    &::-webkit-scrollbar-track {
      background: var(--color-grey-light);
    }
  }

  li {
    background: var(--color-white);
    font-family: var(--font-pt);
    font-size: 12px;
    margin: 6px 10px;
    padding: 10px 20px;
    text-align: left;

    .link-name {
      font-style: italic;
      font-size: 10px;
    }

    .link-linked {
      margin: 0 .5em;
    }

    .link-url {
      font-size: 12px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .link-url:hover {
      cursor: pointer;
      text-decoration: underline;
    }
  }
}
