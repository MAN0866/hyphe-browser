:root {
  --radius: 6px;
}

@import './colors.css';
@import './fonts.css';
@import './buttons.styl';

body {
  background: var(--color-white);
  color: var(--color-black);
}

a {
  color: var(--color-black)
}

a.btn {
  text-decoration: none;
}

.window, .window-content {
  background: var(--color-white);
}

.urlInputContainer {
  display: flex;
}
.urlForm {
  display: inline-block;
  flex-grow: 1;
  margin: 0 1em;
}
.urlInput {
  display: inline-block;
  width: 100%;
}
